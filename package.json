{
  "name": "fitness-app",
  "version": "1.0.0",
  "description": "A fitness app that doubles as a game where users care for a digital pet",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:staging": "NODE_ENV=staging NEXT_PUBLIC_ENVIRONMENT=staging turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
    "deploy:staging": "npm run build:staging && npm run type-check && npm run lint",
    "start:staging": "NODE_ENV=staging NEXT_PUBLIC_ENVIRONMENT=staging turbo run start"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "firebase": "^10.7.0"
  }
}